{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./out",
    "jsxImportSource": "@emotion/react", // 추가
    "paths": {
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@constants": ["./src/constants"],
      "@constants/*": ["./src/constants/*"],
      "@app": ["./src/app"],
      "@app/*": ["./src/app/*"],
      "@features": ["./src/features"],
      "@features/*": ["./src/features/*"],
      "@store": ["./src/store"],
      "@store/*": ["./src/store/*"],
      "@templates": ["./src/templates"],
      "@templates/*": ["./src/templates/*"],
      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"],
      "@views": ["./src/views"],
      "@views/*": ["./src/views/*"],
      "@src": ["./src"],
      "@src/*": ["./src/*"],
      "@": ["./"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "pages/**/*",
    "src/**/*",
    "styles/**/*",
    "public/**/*"
  ],
  "exclude": ["coverage", ".next", "dist", "out", "node_modules"]
}
